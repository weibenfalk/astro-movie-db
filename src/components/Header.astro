---
// Components
import Searchinput from './Searchinput.astro';

interface Props {
  hasSearch?: boolean;
}

const { hasSearch = true } = Astro.props;
---

<div class='wrapper'>
  <div class='inner-wrapper'>
    <a href='/'>
      <div class='logo-wrapper'>
        <div class='logo-large'>
          <img width='150' height='50' src='/rmdb-logo.svg' alt='rmdb-logo' />
        </div>
        <div class='logo-small'>
          <img height='42' width='42' src='/rmdb-logo-small.svg' alt='rmdb-logo-small' />
        </div>
      </div>
    </a>
    {hasSearch && <Searchinput />}
  </div>
</div>

<style>
  .wrapper {
    display: flex;
    top: 0;
    z-index: 40;
    width: 100%;
    height: 120px;
    background-color: rgb(24 24 27 / 1);
    position: sticky;
  }

  .inner-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem 0 1rem;
    /* padding: 1rem 0 1rem 0; */
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .logo-large {
    visibility: hidden;

    @media (min-width: 720px) {
      visibility: visible;
    }
  }

  .logo-small {
    position: absolute;
    padding-top: 0.5rem;

    @media (min-width: 720px) {
      visibility: hidden;
    }
  }

  .search-wrapper {
    display: flex;
    align-items: center;
    position: relative;
  }
</style>
