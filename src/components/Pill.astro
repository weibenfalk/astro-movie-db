---
interface Props {
  text: string;
  extraStyle?: string;
}

const { text, extraStyle } = Astro.props;
---

<div class="pill" style={extraStyle}>
  {text}
</div>

<style>
  .pill {
    background-color: rgb(21 94 117 / 1);
    color: white;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 700;
    padding: 0.25rem 0.5rem 0.25rem 0.5rem;
    margin: 0.5rem;
    border-radius: 9999px;
    display: inline-block;
  }
</style>
